{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "src",
    "jsx": "react",
    "moduleResolution": "node",
    "paths": {
      "@pages/*": [
        "./pages/*"
      ],
      "@layouts/*": [
        "./shared/layouts/*"
      ],
      "@components/*": [
        "./shared/components/*"
      ],
      "@configs/*": [
        "./shared/configs/*"
      ],
      "@constants/*": [
        "./shared/configs/constants/*"
      ],
      "@icons/*": [
        "./assets/icons/*"
      ],
      "@images/*": [
        "./assets/images/*"
      ],
      "@utils/*": [
        "./shared/utils/*"
      ],
      "@sass/*": [
        "./assets/sass/*"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}